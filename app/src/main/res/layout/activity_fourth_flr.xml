<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fourth_flr"
    android:background="#060708">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/flr2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="30dp">
        <Button
            android:id="@+id/back4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="BACK"
            android:background="@drawable/history_btn"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:drawableLeft="@drawable/return_vector"
            android:drawablePadding="8dp"
            android:paddingLeft="13dp"
            android:paddingRight="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@id/grid">

            <TextView
                android:id="@+id/floor_4th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4th Floor"
                android:textSize="48dp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_bold"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/next_4th"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/next_img"
                android:layout_toRightOf="@+id/floor_4th"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/prev_4th"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/prev_img"
                android:layout_toLeftOf="@+id/floor_4th"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:columnCount="3"
            android:rowCount="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.35"
            app:layout_constraintWidth_percent="0.9">


            <ToggleButton
                android:id="@+id/room401"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/floor_btn"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@drawable/floor_font"
                android:textOff="401"
                android:textOn="401"
                android:textSize="48dp"
                android:onClick="onToggleButtonClicked"/>

            <ToggleButton
                android:id="@+id/room402"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/floor_btn"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@drawable/floor_font"
                android:textOff="402"
                android:textOn="402"
                android:textSize="48dp"
                android:onClick="onToggleButtonClicked"/>

            <ToggleButton
                android:id="@+id/room403"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/floor_btn"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@drawable/floor_font"
                android:textOff="403"
                android:textOn="403"
                android:textSize="48dp"
                android:onClick="onToggleButtonClicked"/>

            <ToggleButton
                android:id="@+id/room404"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/floor_btn"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@drawable/floor_font"
                android:textOff="404"
                android:textOn="404"
                android:textSize="48dp"
                android:onClick="onToggleButtonClicked"/>

            <ToggleButton
                android:id="@+id/room405"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/floor_btn"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@drawable/floor_font"
                android:textOff="405"
                android:textOn="405"
                android:textSize="48dp"
                android:onClick="onToggleButtonClicked"/>
            <ToggleButton
                android:id="@+id/room406"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/floor_btn"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@drawable/floor_font"
                android:textOff="406"
                android:textOn="406"
                android:textSize="48dp"
                android:onClick="onToggleButtonClicked"/>
        </GridLayout>

        <Button
            android:id="@+id/confirm_btn4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/scan_btn"
            android:fontFamily="@font/poppins_medium"
            android:text="Confirm"
            android:textColor="#FFFFFF"
            android:textSize="36dp"
            app:layout_constraintTop_toBottomOf="@id/grid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            app:layout_constraintHeight_percent="0.093"
            app:layout_constraintWidth_percent="0.4"
            android:enabled="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>