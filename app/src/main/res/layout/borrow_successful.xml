<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/borrow_successful_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Borrow_return"
    android:background="#060708">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/intersect"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="315dp"
            android:layout_height="143dp"
            android:text="Borrowed Successfully!"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="48dp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="50dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button4"
                android:layout_width="224dp"
                android:layout_height="90dp"
                android:drawableTop="@drawable/borrow_check"
                android:background="@drawable/scan_btn"
                android:paddingTop="25dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>