<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id= "@+id/borrow_again_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#060708">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:text="Do you want to borrow again?"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="48dp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="50dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/borrow_yes"
                android:layout_width="184dp"
                android:layout_height="90dp"
                android:textSize="36dp"
                android:text="YES"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#FFFFFF"
                android:background="@drawable/scan_btn"
                android:layout_marginRight="90dp"/>
            <Button
                android:id="@+id/borrow_no"
                android:layout_width="184dp"
                android:layout_height="90dp"
                android:textSize="36dp"
                android:text="NO"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#060708"
                android:background="@drawable/cancel_btn"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>