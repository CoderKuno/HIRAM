<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252233"
    tools:context=".Scan"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/stock"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.88"
            android:background="#060708"
            android:orientation="vertical"
            android:padding="50dp"
            android:id="@+id/rootLayout">

            <Button
                android:id="@+id/scan"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/scan_btn"
                android:fontFamily="@font/poppins_medium"
                android:text="SCAN"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/scan_button"
                app:layout_constraintHeight_percent="0.09"
                app:layout_constraintWidth_percent="0.37"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:id= "@+id/usep_logo"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/usep_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cic_logo"/>

            <ImageView
                android:layout_width="wrap_content"
                android:id= "@+id/cic_logo"
                android:layout_height="wrap_content"
                android:src="@drawable/cic_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>