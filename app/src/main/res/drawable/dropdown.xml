<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#060708"/>
                    <corners android:radius="21dp"/>
                    <stroke
                        android:color="#6DA5C0"
                        android:width="2dp"/>
                </shape>
            </item>
            <item android:gravity="left"
                android:start="20dp">
                <bitmap android:src="@drawable/college_icon" android:gravity="center"/>
            </item>
            <item android:gravity="right"
                android:end="20dp">
                <bitmap android:src="@drawable/arrow_down" android:gravity="center"/>
            </item>
        </layer-list>
    </item>
</selector>